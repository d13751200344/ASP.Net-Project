@model Photography.Models.Photo

@{
    var photoPath = (Model != null && !string.IsNullOrEmpty(Model.Image)) ?
        "/images/photos/" + Model.Image :
        "/images/placeholder.png";
}

<img id="photo-preview" class="img-thumbnail" src="@photoPath" alt="Photo" />


<script>
    function previewImage(event) {
        const input = event.target;

        if (input.files && input.files[0]) {  //check if the input has a files property & if it has the first value in the array
            const reader = new FileReader(); //FileReader exists in browser

            reader.onload = function (e) {
                const imagePreview = document.querySelector("#photo-preview");
                imagePreview.src = e.target.result;
                imagePreview.style.display = "block";
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>