<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - J | Photography</title

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Photography.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @await Component.InvokeAsync("NavigationMenu")
    </header>
    <!--<div class="container"> -->
    @{
        string title;
        if (ViewData["Title"] != null)
        {
            title = ViewData["Title"].ToString();
        }
        else
        {
            title = "null";
        }
    string containerClass = (title == "Home" || title == "Portfolios" || title == "Courses" || title == "Contact" || title == "Privacy Policy" || title.Contains("Cart Details for ") || title == "Orders" || title.Contains("Order Summary for") || title.Contains("Order Details for")) ? "custom-container" : "container";
    }
    <div class="@containerClass">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="footerdiv">
            <p> Contact us: 
                <a href="tel:7050000000" target="_blank">
                    (705)000-0000
                </a>
              or Email: 
                <a href="mailto:danielwu0592@gmail.com">
                    danielwu0592@gmail.com
                </a>
            </p>
            <p>
                &copy; 2023 - Photography - 
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </p>
            <p>Jing-Xian Wu | 200530592 | 23S Server-Side Scripting-ASP.NET - 06 COMP2084-23S-30966</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
